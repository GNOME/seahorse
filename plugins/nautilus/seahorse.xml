<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">

  <mime-type type="application/pgp-encrypted">
    <magic priority="90">
      <match type="string" value="-----BEGIN PGP MESSAGE-----" offset="0"/>
    </magic>
    <glob pattern="*.pgp"/>
    <glob pattern="*.gpg"/>
    <glob pattern="*.asc"/>
  </mime-type>

  <mime-type type="application/pgp-keys">
    <magic priority="90">
      <match type="string" value="-----BEGIN PGP PUBLIC KEY BLOCK-----" offset="0"/>
      <match type="string" value="-----BEGIN PGP PRIVATE KEY BLOCK-----" offset="0"/>
      <match type="big16" value="0x9501" offset="0"/>
      <match type="big16" value="0x9500" offset="0"/>
      <match type="big16" value="0x9900" offset="0"/>
      <match type="big16" value="0x9901" offset="0"/>
    </magic>
    <glob pattern="*.skr"/>
    <glob pattern="*.pkr"/>
  </mime-type>

  <mime-type type="application/pgp-signature">
    <magic priority="90">
      <match type="string" value="-----BEGIN PGP SIGNED MESSAGE-----" offset="0"/>
      <match type="string" value="-----BEGIN PGP SIGNATURE-----" offset="0"/>
    </magic>
    <glob pattern="*.sig"/>
  </mime-type>
  
  <mime-type type="application/x-ssh-key">
    <magic priority="90">
      <match type="string" value="ssh-dss " offset="0"/>
      <match type="string" value="ssh-rsa " offset="0"/>
      <!-- A seahorse specific prefix for SSH private keys -->
      <match type="string" value="# SSH PRIVATE KEY:" offset="0"/>
    </magic>
  </mime-type>
  
  <!-- TODO: Figure out the proper mime type here -->
  <mime-type type="application/x-pem-key">
    <magic priority="90">
      <match type="string" value="-----BEGIN RSA PRIVATE KEY-----" offset="0"/>
      <match type="string" value="-----BEGIN DSA PRIVATE KEY-----" offset="0"/>
      <match type="string" value="-----BEGIN ENCRYPTED PRIVATE KEY-----" offset="0"/>
    </magic>
  </mime-type>
  
</mime-info>


