    <productname>GNOME</productname>

    <authorgroup>
      <author>
        <contrib>Maintainer</contrib>
        <firstname>Niels</firstname>
        <surname>De Graef</surname>
        <email>nielsdegraef@gmail.com</email>
      </author>
